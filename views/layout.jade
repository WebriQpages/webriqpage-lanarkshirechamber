doctype html
html

	head
		meta(charset='utf8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
		meta(name='description', content= records.site.sitedata[0].metadesc)
		meta(name='author', content= records.site.sitedata[0].metauthor)
		meta(name="keywords" content= records.site.sitedata[0].metakeyword)
		//- uncomment if your site is responsive!
		meta(name="viewport" content="width=device-width, initial-scale=1")

		//- title= _path
		title= records.site.sitedata[0].sitename
		link(rel="stylesheet", href="../css/bootstrap.css" type="text/css")
		link(rel="icon", href= records.site.sitedata[0].icon, type="image/*")
		link(rel="shortcut icon", href= records.site.sitedata[0].icon, type="img/*")

		<!-- Custom Fonts -->
		link(href='//fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,600,700,900', rel='stylesheet', type='text/css')
		link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")

		<!-- Plugin CSS -->
		link(rel="stylesheet", href="../css/animate.min.css", type="text/css")
		link(rel="stylesheet", href="../css/component.css", type="text/css")
		link(rel="stylesheet", href="../css/style-personal.css", type="text/css")
		link(rel="stylesheet", href="../css/master.css", type="text/css")

		//- <!-- Google Analytics -->
		//- script(type="text/javascript")
		//- 	!= records.site.sitedata[0].analytics



	body
		include ./includes/header.jade

		#main-wrapper
			.container
				.row
					.col-left.col-sm-12.col-md-8
						block content
					.col-right.col-xs-12.col-sm-7.col-md-4
						//- include ./includes/right-sidebar.jade
						.row
							.col-lg-12#event
								h1.title Event Calendar
								p Our events calendar provides all you need to know about the latest Chamber events and networking opportunities. We also welcome suggestions from Members on any events you would like to see run in the future, so get in touch with our Events Team at anne.kennedy@lanarkshirechamber.org  and we'll do our best to accommodate

								#calendar
									table.event-handler
											thead
												tr
													th(colspan="2")
														| Upcoming Events
														a.right(href="/events-list") VIEW ALL

											tbody
												each event in events.orderBy('date', 'asc').slice(0,4)
													tr
														td.event-date
															.date-cal= dateFormat(event.date, 'MMM')
															.date-day= dateFormat(event.date, 'D')
															.date-year= dateFormat(event.date, 'YYYY')
														td.event-desc
															.desc-text
																p.event-title
																	a(href= event.permalink)= event.title
							.col-lg-12#member
								p
									a(href="/page/membership")
										img(src="../img/becomemember.jpg")

		include ./includes/footer.jade

