extends layout

block content
	h1.title-header List of Events
	hr
	.event-wrapper
		each event in events.orderBy('date', 'asc').slice(0,10)
			.event-items
				h3.event-title
					a(href= event.permalink)= event.title
				.event-day
					i(class="fa fa-clock-o", aria-hidden="true")
						date= dateFormat(event.date, 'dddd, LL')
				.clear
				.event-shortdesc
					p!= event.shortdesc
					p.read-more
						a(href= event.permalink) Read More
	nav
		ul.pager
			li.previous.disabled
				a(href='#')
					span(aria-hidden='true') ←
					| Older
			li.next
				a(href='/event-archives-page=2')
					| Newer
					span(aria-hidden='true') →


